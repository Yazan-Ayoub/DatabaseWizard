@page
@model IndexModel
@{
    ViewData["Title"] = "Database Wizard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="mb-4">
                <i class="bi bi-database"></i> Database Wizard
            </h1>
            <p class="lead">Create SQL Server databases with tables and relationships using a simple form.</p>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="post" id="schemaForm">
                        <input type="hidden" asp-for="SchemaJson" id="schemaJsonInput" />

                        <!-- Database Name -->
                        <div class="mb-4">
                            <label for="databaseName" class="form-label fw-bold">Database Name</label>
                            <input type="text" class="form-control" id="databaseName" 
                                   placeholder="e.g., MyApplicationDB" required>
                            <small class="text-muted">Must start with a letter, contain only letters, numbers, and underscores</small>
                        </div>

                        <!-- Tables Section -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Tables</label>
                            <div id="tablesContainer"></div>
                            <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="addTable()">
                                <i class="bi bi-plus-circle"></i> Add Table
                            </button>
                        </div>

                        <!-- Relations Section -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Foreign Key Relations (Optional)</label>
                            <div id="relationsContainer"></div>
                            <button type="button" class="btn btn-outline-secondary btn-sm mt-2" onclick="addRelation()">
                                <i class="bi bi-arrow-left-right"></i> Add Relation
                            </button>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-play-circle"></i> Create Database
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Section -->
            @if (Model.Result != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        @if (Model.Result.Success)
                        {
                            <div class="alert alert-success" role="alert">
                                <h5 class="alert-heading"><i class="bi bi-check-circle"></i> Success!</h5>
                                <p>@Model.Result.Message</p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                <h5 class="alert-heading"><i class="bi bi-x-circle"></i> Error</h5>
                                <p>@Model.Result.Message</p>
                                @if (Model.Result.Errors.Any())
                                {
                                    <hr>
                                    <ul class="mb-0">
                                        @foreach (var error in Model.Result.Errors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Result.GeneratedSql))
                        {
                            <div class="mt-3">
                                <h6>Generated SQL:</h6>
                                <pre class="bg-light p-3 rounded"><code>@Model.Result.GeneratedSql</code></pre>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let tableCounter = 0;
        let relationCounter = 0;

        // Data type options
        const dataTypes = [
            'INT', 'BIGINT', 'SMALLINT', 'TINYINT',
            'VARCHAR', 'NVARCHAR', 'CHAR', 'NCHAR', 'TEXT',
            'DECIMAL', 'NUMERIC', 'FLOAT', 'REAL',
            'DATE', 'DATETIME', 'DATETIME2', 'TIME',
            'BIT', 'UNIQUEIDENTIFIER'
        ];

        function addTable() {
            tableCounter++;
            const container = document.getElementById('tablesContainer');
            const tableDiv = document.createElement('div');
            tableDiv.className = 'card mb-3';
            tableDiv.id = `table-${tableCounter}`;
            tableDiv.innerHTML = `
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Table ${tableCounter}</span>
                        <button type="button" class="btn btn-sm btn-outline-light" onclick="removeTable(${tableCounter})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Table Name</label>
                        <input type="text" class="form-control table-name" placeholder="e.g., Users" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Primary Key Column</label>
                        <input type="text" class="form-control table-pk" placeholder="e.g., UserId">
                    </div>
                    <label class="form-label">Columns</label>
                    <div class="columns-container" id="columns-${tableCounter}"></div>
                    <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="addColumn(${tableCounter})">
                        <i class="bi bi-plus"></i> Add Column
                    </button>
                </div>
            `;
            container.appendChild(tableDiv);
            addColumn(tableCounter); // Add first column by default
        }

        function removeTable(tableId) {
            const table = document.getElementById(`table-${tableId}`);
            if (table) table.remove();
        }

        function addColumn(tableId) {
            const container = document.getElementById(`columns-${tableId}`);
            const columnDiv = document.createElement('div');
            columnDiv.className = 'row mb-2 column-row';
            
            const dataTypeOptions = dataTypes.map(dt => `<option value="${dt}">${dt}</option>`).join('');
            
            columnDiv.innerHTML = `
                <div class="col-md-4">
                    <input type="text" class="form-control column-name" placeholder="Column name" required>
                </div>
                <div class="col-md-3">
                    <select class="form-select column-type" required>
                        <option value="">Select type</option>
                        ${dataTypeOptions}
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control column-length" placeholder="Length">
                </div>
                <div class="col-md-2">
                    <div class="form-check mt-2">
                        <input type="checkbox" class="form-check-input column-nullable" checked>
                        <label class="form-check-label">Nullable</label>
                    </div>
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="this.closest('.column-row').remove()">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `;
            container.appendChild(columnDiv);
        }

        function addRelation() {
            relationCounter++;
            const container = document.getElementById('relationsContainer');
            const relationDiv = document.createElement('div');
            relationDiv.className = 'card mb-2';
            relationDiv.innerHTML = `
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            <label class="form-label small">From Table.Column</label>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control relation-from-table" placeholder="Table">
                                <span class="input-group-text">.</span>
                                <input type="text" class="form-control relation-from-column" placeholder="Column">
                            </div>
                        </div>
                        <div class="col-md-1 text-center">
                            <i class="bi bi-arrow-right mt-4"></i>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label small">To Table.Column</label>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control relation-to-table" placeholder="Table">
                                <span class="input-group-text">.</span>
                                <input type="text" class="form-control relation-to-column" placeholder="Column">
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-sm btn-outline-danger mt-4" onclick="this.closest('.card').remove()">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            container.appendChild(relationDiv);
        }

        // Form submission handler
        document.getElementById('schemaForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const schema = {
                databaseName: document.getElementById('databaseName').value,
                tables: [],
                relations: []
            };

            // Collect tables
            document.querySelectorAll('#tablesContainer .card').forEach(tableCard => {
                const tableName = tableCard.querySelector('.table-name').value;
                const primaryKey = tableCard.querySelector('.table-pk').value;
                const columns = [];

                tableCard.querySelectorAll('.column-row').forEach(columnRow => {
                    const columnName = columnRow.querySelector('.column-name').value;
                    const dataType = columnRow.querySelector('.column-type').value;
                    const maxLength = columnRow.querySelector('.column-length').value;
                    const isNullable = columnRow.querySelector('.column-nullable').checked;

                    if (columnName && dataType) {
                        columns.push({
                            columnName: columnName,
                            dataType: dataType,
                            maxLength: maxLength ? parseInt(maxLength) : null,
                            isNullable: isNullable
                        });
                    }
                });

                if (tableName && columns.length > 0) {
                    schema.tables.push({
                        tableName: tableName,
                        primaryKey: primaryKey || null,
                        columns: columns
                    });
                }
            });

            // Collect relations
            document.querySelectorAll('#relationsContainer .card').forEach(relationCard => {
                const fromTable = relationCard.querySelector('.relation-from-table').value;
                const fromColumn = relationCard.querySelector('.relation-from-column').value;
                const toTable = relationCard.querySelector('.relation-to-table').value;
                const toColumn = relationCard.querySelector('.relation-to-column').value;

                if (fromTable && fromColumn && toTable && toColumn) {
                    schema.relations.push({
                        fromTable: fromTable,
                        fromColumn: fromColumn,
                        toTable: toTable,
                        toColumn: toColumn
                    });
                }
            });

            // Set JSON to hidden field
            document.getElementById('schemaJsonInput').value = JSON.stringify(schema);

            // Submit the form
            this.submit();
        });

        // Initialize with one table
        addTable();
    </script>
}
